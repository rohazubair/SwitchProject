<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SMDFinalProject" parent="Theme.Material3.DayNight.NoActionBar">

    </style>

    <style name="Theme.SMDFinalProject" parent="Base.Theme.SMDFinalProject"/>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primaryColor</item>

        <!-- Darker variant of the primary color -->
        <item name="colorPrimaryDark">@color/primaryColor</item>

        <!-- Accent color that complements the primary color -->
        <item name="colorAccent">@color/primaryColor</item>

        <!-- Change the ActionBar background color -->
        <item name="android:background">@color/primaryColor</item>

        <!-- Change the ActionBar title color -->
        <item name="android:titleTextColor">@color/black</item>

        <!-- Change the color of the navigation icon -->
        <item name="colorControlNormal">@color/black</item>

        <!-- Change the color of labels in the toolbar to black -->
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.Light.DarkActionBar">

    </style>

    <style name="AppTheme.ActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleText</item>
        <item name="titleTextStyle">@style/AppTheme.ActionBar.TitleText</item>
        <item name="background">@color/primaryColor</item>
        <item name="android:height">150dp</item>
        <item name="height">60dp</item>
    </style>

    <style name="AppTheme.ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/accentColor</item>
    </style>
</resources>